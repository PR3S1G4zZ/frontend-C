@page "/explorer"
@inject HttpClient Http
@using ConsumoAPI2.Wasm.Models
@inject NavigationManager Navigation

<PageTitle>Explorar Razas - DogFavorites</PageTitle>

<div class="container mt-4 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="text-primary fw-bold mb-0">üåç Explorar Razas</h1>
            <p class="text-muted">Descubre nuevas razas y agr√©galas a tu colecci√≥n</p>
        </div>
        <div class="d-flex gap-2">
            <input type="text" class="form-control" placeholder="Buscar raza..." @bind="searchTerm" @bind:event="oninput" @onkeyup="FilterBreeds" />
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center mt-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (filteredBreeds == null || !filteredBreeds.Any())
    {
        <div class="text-center mt-5">
            <h3 class="text-muted">No se encontraron razas.</h3>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var breed in filteredBreeds)
            {
                <div class="col animate-fade-in">
                    <div class="card h-100 glass-panel border-0 hover-card overflow-hidden">
                        <div class="card-img-top-wrapper position-relative" style="height: 250px; overflow: hidden;">
                            <img src="@(breed.Image?.Url ?? "https://placehold.co/600x400?text=No+Image")" 
                                 class="card-img-top h-100 w-100 object-fit-cover transition-transform" 
                                 alt="@breed.Name" 
                                 loading="lazy"
                                 onerror="this.src='https://placehold.co/600x400?text=No+Image'">
                            <div class="card-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center opacity-0 transition-opacity bg-dark bg-opacity-50">
                                <button class="btn btn-light rounded-pill fw-bold px-4" @onclick="() => AddToFavorites(breed)">
                                    <i class="bi bi-heart-fill text-danger me-2"></i> Agregar a Favoritos
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-dark mb-1">@breed.Name</h5>
                            <p class="card-text text-muted small mb-3">
                                <i class="bi bi-geo-alt-fill text-danger me-1"></i> @(string.IsNullOrEmpty(breed.Origin) ? "Origen desconocido" : breed.Origin)
                            </p>
                            <div class="d-flex flex-wrap gap-2">
                                @if (!string.IsNullOrEmpty(breed.BreedGroup))
                                {
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25">
                                        @breed.BreedGroup
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showToast)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i> ¬°Agregado a favoritos!
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="() => showToast = false"></button>
            </div>
        </div>
    </div>
}

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
    }
    .hover-card:hover .card-overlay {
        opacity: 1 !important;
    }
    .hover-card:hover .card-img-top {
        transform: scale(1.05);
    }
    .transition-transform {
        transition: transform 0.5s ease;
    }
    .transition-opacity {
        transition: opacity 0.3s ease;
    }
    .object-fit-cover {
        object-fit: cover;
    }
</style>

@code {
    private List<DogBreed>? allBreeds;
    private List<DogBreed>? filteredBreeds;
    private bool isLoading = true;
    private string searchTerm = "";
    private bool showToast = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // HttpClient directo a Dog API
            using var client = new HttpClient();
            client.BaseAddress = new Uri("https://api.thedogapi.com/v1/");
            client.DefaultRequestHeaders.Add("x-api-key", "live_IO5ZjVjwigVhC3SrfgvEMNe2fB22sSL5H998b9RAtEBkXIkPfRhEDlZQuWbKAcYz");
            
            allBreeds = await client.GetFromJsonAsync<List<DogBreed>>("breeds?limit=20");
            filteredBreeds = allBreeds;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading breeds: {ex.Message}");
            allBreeds = GetSampleBreeds();
            filteredBreeds = allBreeds;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void FilterBreeds()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredBreeds = allBreeds;
        }
        else
        {
            filteredBreeds = allBreeds?
                .Where(b => b.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private async Task AddToFavorites(DogBreed breed)
    {
        var favorite = new DogFavorite
        {
            DogId = breed.Id.ToString(),
            Name = breed.Name,
            BreedGroup = breed.BreedGroup,
            Origin = breed.Origin,
            ImageUrl = breed.Image?.Url ?? ""
        };

        var response = await Http.PostAsJsonAsync("api/favorites", favorite);
        if (response.IsSuccessStatusCode)
        {
            showToast = true;
            StateHasChanged();
            await Task.Delay(3000);
            showToast = false;
            StateHasChanged();
        }
    }

    private List<DogBreed> GetSampleBreeds()
    {
        return new List<DogBreed>
        {
            new DogBreed { 
