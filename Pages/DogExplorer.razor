            },
            new DogBreed { 
                Id = 2, 
                Name = "Labrador", 
                BreedGroup = "Sporting", 
                Origin = "Canada", 
                Image = new DogImage { Url = "https://cdn2.thedogapi.com/images/B1uW7l5VX.jpg" } 
            }
        };
    }
}
